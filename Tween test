--[[
  Teleport ScreenGui for Roblox
  - Allows the user to input a JobId and teleport to that server.
  - Supports JobIds in the format: 8qRG2DNRgkRGGx2K5fDWU4FZGjKsMxELBNQKgOwCUtHouVjXg4QoTOvCSEIJmDwDaOGIrkSKDplUBbtE7HEHDE1TCEuLHbuQ
  - Place this as a LocalScript under StarterGui.
--]]

local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")
local PlaceId = game.PlaceId

-- UI creation
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TeleportJobIdGui"
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 150)
frame.Position = UDim2.new(0.5, -200, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Teleport por Job ID"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 26
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = frame

local jobIdBox = Instance.new("TextBox")
jobIdBox.Size = UDim2.new(1, -20, 0, 36)
jobIdBox.Position = UDim2.new(0, 10, 0, 40)
jobIdBox.PlaceholderText = "Cole o Job ID aqui"
jobIdBox.Font = Enum.Font.SourceSans
jobIdBox.Text = ""
jobIdBox.TextSize = 20
jobIdBox.TextColor3 = Color3.fromRGB(0,0,0)
jobIdBox.BackgroundColor3 = Color3.fromRGB(220,220,220)
jobIdBox.ClearTextOnFocus = false
jobIdBox.Parent = frame

local teleportButton = Instance.new("TextButton")
teleportButton.Size = UDim2.new(0.5, -15, 0, 36)
teleportButton.Position = UDim2.new(0, 10, 1, -46)
teleportButton.Text = "Teleportar"
teleportButton.Font = Enum.Font.SourceSansBold
teleportButton.TextSize = 22
teleportButton.TextColor3 = Color3.fromRGB(255,255,255)
teleportButton.BackgroundColor3 = Color3.fromRGB(60,160,60)
teleportButton.Parent = frame

local cancelButton = Instance.new("TextButton")
cancelButton.Size = UDim2.new(0.5, -15, 0, 36)
cancelButton.Position = UDim2.new(0.5, 5, 1, -46)
cancelButton.Text = "Cancelar"
cancelButton.Font = Enum.Font.SourceSansBold
cancelButton.TextSize = 22
cancelButton.TextColor3 = Color3.fromRGB(255,255,255)
cancelButton.BackgroundColor3 = Color3.fromRGB(180,60,60)
cancelButton.Parent = frame

local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, -20, 0, 20)
statusLabel.Position = UDim2.new(0, 10, 1, -20)
statusLabel.BackgroundTransparency = 1
statusLabel.Text = ""
statusLabel.Font = Enum.Font.SourceSans
statusLabel.TextSize = 18
statusLabel.TextColor3 = Color3.fromRGB(255,255,0)
statusLabel.Parent = frame

-- Show GUI
screenGui.Parent = Players.LocalPlayer.PlayerGui

-- Button logic
teleportButton.MouseButton1Click:Connect(function()
    local jobId = jobIdBox.Text and jobIdBox.Text:match("^%s*(.-)%s*$") or ""
    if #jobId < 32 then
        statusLabel.Text = "JobId invÃ¡lido!"
        statusLabel.TextColor3 = Color3.fromRGB(255,0,0)
        return
    end

    statusLabel.Text = "Teleportando..."
    statusLabel.TextColor3 = Color3.fromRGB(255,255,0)
    -- Teleport
    local success, err = pcall(function()
        TeleportService:TeleportToPlaceInstance(PlaceId, jobId, Players.LocalPlayer)
    end)
    if not success then
        statusLabel.Text = "Falha ao teleportar: " .. tostring(err)
        statusLabel.TextColor3 = Color3.fromRGB(255,0,0)
    end
end)

cancelButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
