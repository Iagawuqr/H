-- Criação dos elementos da interface
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MeuScreenGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Frame principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 110)
frame.Position = UDim2.new(0.5, -125, 0.5, -55)
frame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

-- Botão de fechar
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.Text = "X"
closeButton.Parent = frame
closeButton.BackgroundColor3 = Color3.fromRGB(200, 70, 70)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 20

-- Botão de abrir
local openButton = Instance.new("TextButton")
openButton.Size = UDim2.new(0, 30, 0, 30)
openButton.Position = UDim2.new(0, 10, 0, 10)
openButton.Text = ">"
openButton.Visible = false
openButton.Parent = screenGui
openButton.BackgroundColor3 = Color3.fromRGB(70, 200, 70)
openButton.TextColor3 = Color3.fromRGB(255, 255, 255)
openButton.Font = Enum.Font.SourceSansBold
openButton.TextSize = 20

-- Botão toggle de ativar/desativar
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 200, 0, 40)
toggleButton.Position = UDim2.new(0, 25, 0, 60)
toggleButton.Text = "Desativado"
toggleButton.Parent = frame
toggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 200)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 20

-- Plataforma flutuante
local platform = Instance.new("Part")
platform.Size = Vector3.new(6, 1, 6)
platform.Anchored = true
platform.Color = Color3.fromRGB(100, 255, 100)
platform.Transparency = 0.2
platform.Name = "PlataformaFlutuante"
platform.CanCollide = true
platform.Parent = workspace
platform.Visible = false

-- Função para atualizar posição da plataforma
local function atualizarPlataforma()
	local character = player.Character
	if character and character:FindFirstChild("HumanoidRootPart") then
		local hrp = character.HumanoidRootPart
		platform.Position = hrp.Position - Vector3.new(0, 3.5, 0)
	end
end

-- Estado do toggle
local ativado = false

-- Lógica do botão toggle
toggleButton.MouseButton1Click:Connect(function()
	ativado = not ativado
	if ativado then
		toggleButton.Text = "Ativado"
		toggleButton.BackgroundColor3 = Color3.fromRGB(70, 200, 70)
		print("Ativado")

		-- Ativar plataforma
		atualizarPlataforma()
		platform.Visible = true
	else
		toggleButton.Text = "Desativado"
		toggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 200)
		print("Desativado")

		-- Desativar plataforma
		platform.Visible = false
	end
end)

-- Lógica para manter a plataforma atualizada
game:GetService("RunService").Heartbeat:Connect(function()
	if ativado and platform.Visible then
		atualizarPlataforma()
	end
end)

-- Botão de fechar a interface
closeButton.MouseButton1Click:Connect(function()
	frame.Visible = false
	openButton.Visible = true
end)

-- Botão de abrir a interface
openButton.MouseButton1Click:Connect(function()
	frame.Visible = true
	openButton.Visible = false
end)
